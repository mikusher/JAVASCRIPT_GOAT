  				</HEAD>
  				<SOURCE>
  					<FILE DIALOG="word" />
  				</SOURCE>
  				<BUTTONS>
  					<BUTTON LABEL="TConfigForm_AddItemNext" TYPE="add" />
  					<BUTTON LABEL="TPatternsForm_ChangeButton" TYPE="edit" />
  					<BUTTON LABEL="TConfigForm_DeleteItem" TYPE="delete" />
  				</BUTTONS>
  			</OPTION>
      </GROUP>
    </SECTION>
    
